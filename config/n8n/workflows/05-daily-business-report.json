      "id": "schedule-trigger",
      "name": "Daily 6 PM",
      "type": "n8n-nodes-base.scheduleTrigger",
      "typeVersion": 1.2,
      "position": [250, 300]
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "SELECT \n  COUNT(*) as total_leads,\n  COUNT(CASE WHEN business = 'netsurf_power' THEN 1 END) as power_leads,\n  COUNT(CASE WHEN business = 'netsurf_nature_park' THEN 1 END) as park_leads,\n  COUNT(CASE WHEN priority = 'high' THEN 1 END) as high_priority\nFROM leads \nWHERE created_at >= CURRENT_DATE",
        "options": {}
      },
      "id": "get-leads-stats",
      "name": "Get Leads Stats",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2.5,
      "position": [470, 200],
      "credentials": {
        "postgres": {
          "id": "postgres-cred",
          "name": "Netsurf PostgreSQL"
        }
      }
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "SELECT \n  COUNT(*) as total_bookings,\n  SUM(total_gyd) as total_revenue,\n  COUNT(CASE WHEN status = 'confirmed' THEN 1 END) as confirmed,\n  COUNT(CASE WHEN status = 'pending' THEN 1 END) as pending\nFROM bookings \nWHERE created_at >= CURRENT_DATE",
        "options": {}
      },
      "id": "get-bookings-stats",
      "name": "Get Bookings Stats",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2.5,
      "position": [470, 400],
      "credentials": {
        "postgres": {
          "id": "postgres-cred",
          "name": "Netsurf PostgreSQL"
        }
      }
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "SELECT \n  COUNT(*) as total_tickets,\n  COUNT(CASE WHEN priority = 'urgent' THEN 1 END) as urgent,\n  COUNT(CASE WHEN auto_responded = true THEN 1 END) as auto_responded\nFROM ticket_analytics \nWHERE created_at >= CURRENT_DATE",
        "options": {}
      },
      "id": "get-support-stats",
      "name": "Get Support Stats",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2.5,
      "position": [470, 600],
      "credentials": {
        "postgres": {
          "id": "postgres-cred",
          "name": "Netsurf PostgreSQL"
        }
      }
    },
    {
      "parameters": {
        "mode": "combine",
        "mergeByFields": {
          "values": []
        },
        "combinationMode": "mergeByPosition",
        "options": {}
      },
      "id": "merge-stats",
      "name": "Merge Stats",
      "type": "n8n-nodes-base.merge",
      "typeVersion": 3,
      "position": [690, 400]
